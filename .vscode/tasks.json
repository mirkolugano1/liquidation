{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kill Debug Session",
            "type": "shell",
            "command": "timeout /t 1 && echo 'Terminating debugger...'",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": [],
            "dependsOn": ["Force Stop Debugging"]
        },
        {
            "label": "Force Stop Debugging",
            "type": "shell",
            "command": "timeout /t 1 > nul",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Kill Azure Functions Process",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/F",
                "/IM",
                "func.exe",
                "2>nul",
                "||",
                "echo",
                "No func.exe process found"
            ],
            "presentation": {
                "reveal": "never",
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Start Azurite",
            "type": "shell",
            "command": "azurite",
            "args": ["--location", "azurite", "--debug", "azurite\\debug.log"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Stop Azurite",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/F",
                "/IM",
                "node.exe",
                "/FI",
                "WINDOWTITLE eq *azurite*"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "type": "func",
            "label": "func: host start",
            "command": "host start",
            "problemMatcher": "$func-node-watch",
            "isBackground": true,
            "dependsOn": [
                "Kill Azure Functions Process",
                "npm watch (functions)"
            ],
            "options": {
                "env": {
                    "languageWorkers__node__arguments": "--inspect=9229"
                }
            }
        },
        {
            "type": "shell",
            "label": "npm build (functions)",
            "command": "npm run build",
            "dependsOn": "npm install (functions)",
            "problemMatcher": "$tsc"
        },
        {
            "type": "shell",
            "label": "npm watch (functions)",
            "command": "npm run watch",
            "dependsOn": "npm install (functions)",
            "problemMatcher": "$tsc-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "npm install (functions)",
            "command": "npm install"
        },
        {
            "type": "shell",
            "label": "npm prune (functions)",
            "command": "npm prune --production",
            "dependsOn": "npm build (functions)",
            "problemMatcher": []
        }
    ]
}
